@model IEnumerable<AppPrint_and_Wear.Models.Envio>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Index";
}

<h1>lista de envios</h1>

<p>
    <a asp-action="Create">Crear nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Direccion_De_Envio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tiempo_Estimado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero_De_Rastreo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carrito)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion_De_Envio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tiempo_Estimado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero_De_Rastreo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carrito.Carrito_De_CompraId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EnvioId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EnvioId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EnvioId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
