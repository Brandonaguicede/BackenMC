@model IEnumerable<AppPrint_and_Wear.Models.Metodo_De_Pago>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Lista de Métodos de Pago";
}

<h1>Lista de los métodos de pago</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Metodo_Tipo)</th>
            <th>@Html.DisplayNameFor(model => model.Numero_Tarjeta)</th>
            <th>@Html.DisplayNameFor(model => model.ExpirationDate)</th>
            <th>@Html.DisplayNameFor(model => model.CVV)</th>
            <th>@Html.DisplayNameFor(model => model.Cliente)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Metodo_Tipo)</td>
                <td>@Html.DisplayFor(modelItem => item.Numero_Tarjeta)</td>
                <td>@Html.DisplayFor(modelItem => item.ExpirationDate)</td>
                <td>@Html.DisplayFor(modelItem => item.CVV)</td>
                <td>@item.Cliente?.Nombre</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.Metodo_De_PagoId" class="btn btn-sm btn-success">Ver</a>
                    <a asp-action="Edit" asp-route-id="@item.Metodo_De_PagoId" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Metodo_De_PagoId" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
