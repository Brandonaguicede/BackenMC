@model AppPrint_and_Wear.Models.Personalizacion

@{
    ViewBag.Title = "Personaliza tu Camiseta";
}

<link href="~/css/personalizacion.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="text-white display-4 fw-bold">
            <i class="fas fa-tshirt"></i> Diseña tu Camiseta Perfecta
        </h1>
        <p class="text-white lead">Crea un diseño único en minutos</p>
    </div>

    <div class="main-container">
        <div class="row">
            <!-- PREVIEW DE LA CAMISETA -->
            <div class="col-lg-6">
                <div class="col-lg-6">
                    <div class="shirt-preview-container">
                        <div class="shirt-canvas" id="shirtCanvas">

                            <div class="shirt-color-layer" id="shirtColorLayer"></div>

                            <img id="shirtBase" src="~/CamisasPersonalizar/cuelloRedondo.png" class="shirt-image" alt="Camiseta base">

                            <div class="design-area" id="designArea">
                                <img id="logoPreview" class="uploaded-logo" style="display:none;" draggable="true">
                                <div id="textPreview" class="custom-text"></div>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- Selector de posición -->
                <div class="text-center mt-3">
                    <h5>Posición del Diseño</h5>
                    <div class="position-selector justify-content-center">
                        <button type="button" class="position-btn active" data-position="frente">
                            <i class="fas fa-arrow-up"></i> Frente
                        </button>
                        <button type="button" class="position-btn" data-position="espalda">
                            <i class="fas fa-arrow-down"></i> Espalda
                        </button>
                        <button type="button" class="position-btn" data-position="manga">
                            <i class="fas fa-hand"></i> Manga
                        </button>
                    </div>
                </div>
            </div>

            <!-- PANEL DE CONTROL -->
            <div class="col-lg-6">
                @using (Html.BeginForm("GuardarPersonalizacion", "Personalizacions", FormMethod.Post, new { @class = "needs-validation", enctype = "multipart/form-data", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                    <!-- Tabs de Control -->
                    <ul class="nav nav-tabs control-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#colorTab">
                                <i class="fas fa-palette"></i> Color
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#styleTab">
                                <i class="fas fa-shirt"></i> Estilo
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#designTab">
                                <i class="fas fa-image"></i> Diseño
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#detailsTab">
                                <i class="fas fa-cog"></i> Detalles
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content mt-3">
                        <!-- TAB 1: COLOR -->
                        <div id="colorTab" class="tab-pane fade show active">
                            <h4 class="mb-3">Elige el Color</h4>
                            <div class="text-center">
                                <div class="color-option selected" data-color="#ffffff" style="background:#ffffff; border:2px solid #ddd;" title="Blanco"></div>
                                <div class="color-option" data-color="#000000" style="background:#000000;" title="Negro"></div>
                                <div class="color-option" data-color="#1e3a8a" style="background:#1e3a8a;" title="Azul Marino"></div>
                                <div class="color-option" data-color="#dc2626" style="background:#dc2626;" title="Rojo"></div>
                                <div class="color-option" data-color="#16a34a" style="background:#16a34a;" title="Verde"></div>
                                <div class="color-option" data-color="#9333ea" style="background:#9333ea;" title="Morado"></div>
                                <div class="color-option" data-color="#ea580c" style="background:#ea580c;" title="Naranja"></div>
                                <div class="color-option" data-color="#fbbf24" style="background:#fbbf24;" title="Amarillo"></div>
                                <div class="color-option" data-color="#ec4899" style="background:#ec4899;" title="Rosa"></div>
                                <div class="color-option" data-color="#6b7280" style="background:#6b7280;" title="Gris"></div>
                            </div>
                            <input type="hidden" id="colorInput" name="Color" value="blanco" required>
                        </div>

                        <!-- TAB 2: ESTILO -->
                        <div id="styleTab" class="tab-pane fade">
                            <h4 class="mb-3">Elige el Estilo</h4>
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="style-option selected" data-style="cuello-redondo" data-svg="roundNeck">
                                        <i class="fas fa-circle"></i>
                                        <p class="mb-0">Cuello Redondo</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="style-option" data-style="cuello-v" data-svg="vNeck">
                                        <i class="fas fa-v"></i>
                                        <p class="mb-0">Cuello V</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="style-option" data-style="polo" data-svg="polo">
                                        <i class="fas fa-male"></i>
                                        <p class="mb-0">Polo</p>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="style-option" data-style="manga-larga" data-svg="longSleeve">
                                        <i class="fas fa-shirt"></i>
                                        <p class="mb-0">Manga Larga</p>
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" id="styleInput" name="Estilo" value="cuello-redondo" required>
                        </div>

                        <!-- TAB 3: DISEÑO -->
                        <div id="designTab" class="tab-pane fade">
                            <h4 class="mb-3">Personaliza tu Diseño</h4>

                            <!-- Subir Logo -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-image"></i> Subir Logo/Imagen
                                </label>
                                <div class="upload-area" id="uploadArea">
                                    <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
                                    <p>Arrastra tu imagen aquí o haz clic para seleccionar</p>
                                    <input type="file" id="logoInput" name="LogoFile" accept="image/*" style="display:none;">
                                    <button type="button" class="btn btn-outline-primary" onclick="document.getElementById('logoInput').click()">
                                        Seleccionar Archivo
                                    </button>
                                </div>
                                <input type="hidden" id="imagenEstampadoInput" name="ImagenEstampado">
                            </div>

                            <!-- Texto Personalizado -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-font"></i> Texto Personalizado
                                </label>
                                <input type="text" id="textoInput" name="TextoEstampado" class="form-control form-control-lg"
                                       maxlength="100" placeholder="Escribe tu texto aquí...">
                                <small class="text-muted">Máximo 100 caracteres (+$3.00)</small>
                            </div>

                            <!-- Tipo de Estampado -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-stamp"></i> Tipo de Estampado
                                </label>
                                <select id="tipoEstampadoInput" name="TipoEstampado" class="form-select form-select-lg">
                                    <option value="ninguno">Sin estampado</option>
                                    <option value="vinilo">Vinilo (+$5.00)</option>
                                    <option value="sublimacion">Sublimación (+$5.00)</option>
                                    <option value="bordado">Bordado (+$8.00)</option>
                                </select>
                            </div>

                            <input type="hidden" id="posicionInput" name="PosicionEstampado" value="frente">
                        </div>

                        <!-- TAB 4: DETALLES -->
                        <div id="detailsTab" class="tab-pane fade">
                            <h4 class="mb-3">Detalles del Pedido</h4>

                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-ruler"></i> Talla
                                </label>
                                <select name="Talla" class="form-select form-select-lg" required>
                                    <option value="">Selecciona una talla</option>
                                    <option value="XS">XS - Extra Pequeña</option>
                                    <option value="S">S - Pequeña</option>
                                    <option value="M" selected>M - Mediana</option>
                                    <option value="L">L - Grande</option>
                                    <option value="XL">XL - Extra Grande</option>
                                    <option value="XXL">XXL - Doble Extra Grande</option>
                                </select>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-shopping-cart"></i> Cantidad
                                </label>
                                <input type="number" id="cantidadInput" name="Cantidad" class="form-control form-control-lg"
                                       min="1" max="100" value="1" required>
                                <small class="text-muted">Mínimo 1, Máximo 100 unidades</small>
                            </div>

                            <!-- Precio Total -->
                            <div class="price-display">
                                <p class="mb-2">Precio Total Estimado</p>
                                <h3 id="precioTotal">$25.00</h3>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="d-grid gap-3 mt-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-cart-plus"></i> Agregar al Carrito
                        </button>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Volver al Inicio
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/personalizacion.js"></script>
}