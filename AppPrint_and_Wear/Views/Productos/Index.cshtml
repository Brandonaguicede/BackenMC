@model List<AppPrint_and_Wear.Models.Producto>

<section class="productos">
    <h2>Productos Destacados</h2>

    <div class="carrusel">
        <button class="flecha izquierda">❮</button>

        <div class="contenedor-cards" id="cardsContainer">
            @foreach (var producto in Model)
            {
                <div class="card">
                    <img src="@producto." alt="@producto.Nombre" />
                    <h3>@producto.Nombre</h3>
                    <p class="precio">₡@producto.Precio</p>
                    <div class="botones">
                        <button class="btn-comprar">Comprar</button>
                        <button class="btn-detalles">Detalles</button>
                    </div>
                </div>
            }
        </div>

        <button class="flecha derecha">❯</button>
    </div>
</section>

@section Scripts {
    <script>
        const contenedor = document.getElementById('cardsContainer');
        const btnIzq = document.querySelector('.izquierda');
        const btnDer = document.querySelector('.derecha');

        btnIzq.addEventListener('click', () => {
            contenedor.scrollBy({ left: -250, behavior: 'smooth' });
        });

        btnDer.addEventListener('click', () => {
            contenedor.scrollBy({ left: 250, behavior: 'smooth' });
        });
    </script>
}

