@model IEnumerable<TuProyecto.Models.Producto>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Lista de Productos";
}

<h1 class="mb-4">Lista de productos de nuestra empresa de personalización de camisas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Crear nuevo producto
    </a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-dark text-center">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Stock)</th>
            <th>@Html.DisplayNameFor(model => model.Precio)</th>
            <th>Imagen Frente</th>
            <th>Imagen Espalda</th>
            <th>@Html.DisplayNameFor(model => model.Categoria)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Descripcion</td>
                <td class="text-center">@item.Stock</td>
                <td class="text-right" style="color: green;">₡@item.Precio.ToString("N2")</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagenUrlFrende))
                    {
                        <img src="@item.ImagenUrlFrende" alt="Frente" width="70" height="70" class="rounded shadow-sm" />
                    }
                    else
                    {
                        <span class="text-muted">Sin imagen</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagenUrlEspalda))
                    {
                        <img src="@item.ImagenUrlEspalda" alt="Espalda" width="70" height="70" class="rounded shadow-sm" />
                    }
                    else
                    {
                        <span class="text-muted">Sin imagen</span>
                    }
                </td>
                <td class="text-center">
                    @item.Categoria?.Nombre
                </td>

                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.ProductoId" class="btn btn-sm btn-success">
                        <i class="bi bi-eye"></i> Ver
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.ProductoId" class="btn btn-sm btn-warning text-dark">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ProductoId" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
