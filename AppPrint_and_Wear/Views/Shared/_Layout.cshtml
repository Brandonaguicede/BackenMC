<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - App</title>

    <link rel="stylesheet" href="~/css/LandingPage.css" asp-append-version="true" />
    @* otras hojas de estilo *@
</head>
<body>
    <header>
        @* nav / header *@
    </header>

    <main role="main" class="container">
        @RenderBody()
    </main>

    @* scripts globales opcionales *@
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* ⬇️ Las secciones de scripts de las vistas se inyectan aquí *@
    @RenderSection("Scripts", required: false)
</body>
</html>
