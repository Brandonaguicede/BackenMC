<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Print & Wear</title>

    <!-- Bootstrap y FontAwesome -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

    <!-- Estilos generales y del editor -->
    <link rel="stylesheet" href="~/AppPrint_and_Wear.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/diseno.css" asp-append-version="true" />

    @RenderSection("HeadContent", required: false)
</head>
<body class="@(User.Identity.IsAuthenticated ? "logeado" : "")">

   

    <!-- Contenido principal -->
    <main role="main" class="container-fluid p-0">
        @RenderBody()
    </main>

  

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/scriptdis.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
